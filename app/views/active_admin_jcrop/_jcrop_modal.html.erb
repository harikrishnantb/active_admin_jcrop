<%= link_to I18n.t("active_admin.crop.open_crop_modal").titleize, "#" , class: "button crop_modal_open" %>


<%= content_tag :div, class: "crop_modal_content" do %>
  <center>
    <%=hidden_field_tag(' ')%>
    <%=hidden_field_tag('crop_w')%>
    <%=hidden_field_tag('crop_x')%>
    <%=hidden_field_tag('crop_y')%>
    <%=hidden_field_tag('crop_h')%>
    <%=hidden_field_tag('crop_field',field)%>
    <div class="crop_modal_dimensions"></div>
    <%= image_tag object.send(field).url, class: 'cropping_image', data: {
      object_class: object.class.to_s.underscore, 
      object_id: object.id, 
      crop_field: field,
jcropper_url: object.new_record? ? '': send("jcropper_#{ActiveAdmin.application.default_namespace.to_s}_#{object.class.to_s.demodulize.underscore}_path", object),
      translate_save_cropped_image: I18n.t("active_admin.crop.save_cropped_image").titleize,
      translate_cancel: I18n.t("active_admin.crop.cancel").titleize,
      jcrop_options: jcrop_options.to_json
      }
    %>
  </center>
<% end %>
